
{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Start COE",
        "type": "shell",
        "command": "java -jar script/coe-1.0.10.jar -p 8082",
        "windows": {
          "command": "java -jar script\\coe-1.0.10.jar -p 8082"
        },
        "linux": {
          "command": "java -jar script/coe-1.0.10.jar -p 8082"
        },
        "osx": {
          "command": "java -jar script/coe-1.0.10.jar -p 8082"
        },
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
    },

    {
      "label": "Run Co-Simulation",
      "type": "shell",
      "command": "java",
      "args": [
        "-jar",
        "script/coe-1.0.10.jar",
        "--configuration",
        "${workspaceFolder}/scenario.json",
        "--oneshot",
        "--starttime",
        "0.0",
        "--endtime",
        "10.0"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
    
  ]
}


